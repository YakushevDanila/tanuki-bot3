# ============================================
# НАСТРОЙКИ TELEGRAM BOT
# ============================================

# Токен бота от @BotFather
# Получить: https://t.me/BotFather
BOT_TOKEN=your_bot_token_here

# Секретная фраза для доступа к боту
# Пользователи будут использовать /auth <эта_фраза>
SECRET_PHRASE=my_secret_access_phrase_123

# ============================================
# ВЫБОР ХРАНИЛИЩА ДАННЫХ
# ============================================

# Тип хранилища (google_sheets или sqlite)
STORAGE_TYPE=sqlite

# ============================================
# GOOGLE SHEETS НАСТРОЙКИ (если используется)
# ============================================

# JSON credentials из Google Cloud Console
# Скопируйте содержимое JSON файла с ключами
GOOGLE_CREDENTIALS={"type": "service_account", "project_id": "...", ...}

# ID Google таблицы (из URL)
# Пример: https://docs.google.com/spreadsheets/d/XXX/edit#gid=0
SHEET_ID=your_google_sheet_id_here

# ============================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Разрешенные пользователи (через запятую)
# Оставьте пустым для использования секретной фразы
ALLOWED_USERS=123456789,987654321
